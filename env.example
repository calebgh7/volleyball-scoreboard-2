# Environment Variables for VolleyScore Pro
# Copy this file to .env.local and fill in your values

# App Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# For Railway: Will be auto-set
# For Supabase: Use your database URL
DATABASE_URL=postgresql://username:password@localhost:5432/volleyscore

# JWT Authentication
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-here

# Cloudinary Configuration (for image storage)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: Local Database (for development)
LOCAL_DATABASE_URL=postgresql://localhost:5432/volleyscore

# Optional: CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Session Secret
SESSION_SECRET=your-session-secret-here
